{
  "Server": {
    // This section defines settings related to the server that the application will run on.
    "Address": "localhost",
    "Port": 8080
  },
  "ConnectionStrings": {
    // This section defines the connection string used to connect to a PostgreSQL database.
    "PostgreConnection": "Server=localhost;Port=5432;Database=TestProjectDB;User Id=admin;Password=admin;",
    "PostgreConnectionTests": "Server=localhost;Port=5432;Database=TestsForTestProjectDB;User Id=admin;Password=admin;"
  },
  "Logging": {
    // This section defines settings related to logging in the application.
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  // This section specifies a list of hosts that the application is allowed to serve.
  "AllowedHosts": "*",
  // This section specifies a format for SecureException writing in a file.
  "SecureExceptionFormat": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Exception}{NewLine}"
}
